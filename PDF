npm install -g pdf2html
import { exec } from 'child_process';

const convertPdfToHtml = async (pdfFilePath: string, htmlFilePath: string) => {
  const command = `pdf2htmlEX --dest-dir ./tmp ${pdfFilePath}`;
  
  exec(command, (error, stdout, stderr) => {
    if (error) {
      console.error(`Error executing command: ${error.message}`);
      return;
    }

    console.log('PDF converted to HTML successfully');

    // Read the HTML file generated by pdf2htmlEX
    const htmlContent = fs.readFileSync('./tmp/index.html', 'utf-8');

    // Write the HTML content to the output file
    fs.writeFileSync(htmlFilePath, htmlContent);

    console.log(`HTML file saved to ${htmlFilePath}`);
  });
};

// Usage example
const pdfFilePath = './input.pdf';
const htmlFilePath = './output.html';

convertPdfToHtml(pdfFilePath, htmlFilePath)
  .catch((err) => console.error(err));
