npm init -y
npm install pdf-poppler typescript @types/node


import * as fs from 'fs';
import { PDFPoppler } from 'pdf-poppler';

const convertPdfToHtml = async (pdfFilePath: string, htmlFilePath: string) => {
  const pdfOptions = {
    format: 'html',
    out_dir: './tmp', // Output directory for intermediate files (optional)
  };

  const pdfPoppler = new PDFPoppler();
  await pdfPoppler.convert(pdfFilePath, pdfOptions);

  // Read the HTML file generated by pdf-poppler
  const htmlContent = fs.readFileSync('./tmp/out.html', 'utf-8');

  // Write the HTML content to the output file
  fs.writeFileSync(htmlFilePath, htmlContent);

  console.log(`HTML file saved to ${htmlFilePath}`);
};

// Usage example
const pdfFilePath = './input.pdf';
const htmlFilePath = './output.html';

convertPdfToHtml(pdfFilePath, htmlFilePath)
  .catch((err) => console.error(err));
